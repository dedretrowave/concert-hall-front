<script>
    const sliderOptionsDefault = {
        type            : 'loop',
        autoplay        : true,
        pagination      : false,
        start           : 0,
        flickMaxPages   : 1,
        lazyLoad        : 'nearby',
        cover           : true,
        drag            : true,
    };

    const sliders = document.querySelectorAll('.splide');

    sliders.forEach(slider => {
        let sliderOptions;

        switch (slider.classList[0]) {
            case 'affiche__slider':
                sliderOptions = {
                    ...sliderOptionsDefault,
                    perPage         : 4,
                    perMove         : 1,
                    gap             : 42,
                    height          : 500,
                    width           : 1800,
                    cover           : false,
                    breakpoints     : {
                        576: {
                            arrows  : false,
                            perPage : 1,
                        },
                        992: {
                            arrows  : true,
                            perPage : 2,
                        },
                        1200: {
                            perPage : 3,
                        }
                    }
                }
                break;
            case 'banner__slider':
                sliderOptions = {
                    ...sliderOptionsDefault,
                    perPage         : 1,
                    perMove         : 1,
                };
                break;
            case 'for-visitors__slider':
                sliderOptions = {
                    ...sliderOptionsDefault,
                    type        : 'slide',
                    autoplay    : false,
                    height      : 350,
                    drag        : true,
                    rewind      : false,
                    rewindSpeed : 0,
                    arrows      : false,
                }
                break;
            default:
                sliderOptions = sliderOptionsDefault;
        }

        new Splide('.' + slider.classList[0], sliderOptions).mount();
    })
</script>
